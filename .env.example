# PostgreSQL Configuration
# Leave blank or set USE_MEMORY=true to use in-memory storage

# Database URL (PostgreSQL connection string)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nft_marketplace_dev

# Use in-memory storage instead of database (for development/testing)
# Set to 'true' to use in-memory storage, 'false' or unset to use PostgreSQL
USE_MEMORY=false

# Service Configuration
PORT=3003
NODE_ENV=development

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
